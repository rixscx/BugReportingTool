{
  "name": "bug-reporting-tool",
  "description": "Professional bug tracking application with real-time updates",
  "version": "1.0.0",
  "author": "rixscx",
  "license": "MIT",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rixscx/BugReportingTool.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build && vercel --prod",
    "build:prod": "npm run lint && npm run build",
    "analyze": "npm run build && du -sh dist && find dist/assets -type f -exec du -h {} \\; | sort -rh",
    "docker:build": "docker build -t bug-reporting-tool:latest .",
    "docker:run": "docker run -d --name bug-reporting-tool -p 3000:3000 -e VITE_SUPABASE_URL=$VITE_SUPABASE_URL -e VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY bug-reporting-tool:latest",
    "docker:compose": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f bug-reporting-tool",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "terser": "^5.44.1",
    "vite": "^7.2.4",
    "vite-plugin-compression": "^0.5.1"
  }
}
